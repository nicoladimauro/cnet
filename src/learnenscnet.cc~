#include <iostream>
#include <vector>
#include <sstream>
#include <fstream>
#include <cstdlib>
#include <getopt.h>
#include <chrono>
#include <map>

#include "cltree.h"
#include "dataset.h"
#include "nodes.h"
#include "cnet.h"
#include "params.h"
#include "enscnet.h"
#include "globals.h"

std::mt19937 random_generator;

void usage(const char* prog){

   std::cout << "Read training data then classify test data using logistic regression:\nUsage:\n" << prog << " [options] [training_data]" << std::endl << std::endl;
   std::cout << "Options:" << std::endl;   
   std::cout << "-s <int>   Shuffle dataset after each iteration. default 1" << std::endl;    
   std::cout << "-i <int>   Maximum iterations. default 50000" << std::endl;   
   std::cout << "-e <float> Convergence rate. default 0.005" << std::endl;    
   std::cout << "-a <float> Learning rate. default 0.001" << std::endl; 
   std::cout << "-l <float> L1 regularization weight. default 0.0001" << std::endl; 
   std::cout << "-m <file>  Read weights from file" << std::endl;    
   std::cout << "-o <file>  Write weights to file" << std::endl;   
   std::cout << "-t <file>  Test file to classify" << std::endl;     
   std::cout << "-p <file>  Write predictions to file" << std::endl;     
   std::cout << "-r         Randomise weights between -1 and 1, otherwise 0" << std::endl;    
   std::cout << "-v         Verbose." << std::endl << std::endl;      
}

int main(int argc, char **argv)
{
    params inputParameters;

	// setting default values
	char * data_file_name = NULL;
	int min_instances = 1000;
	int min_features = 4;
    int seed = 1;

    inputParameters.min_instances = 1000;

	int iarg = 0;

	while(iarg != -1){
    iarg = getopt(argc, argv, "hi:d:s:");
    switch (iarg){
      case 'h':
        usage("csn++");
        break;

      case 'i':
        data_file_name = optarg;
        break;

      case 'd':
        inputParameters.min_instances = atoi(optarg);
        break;

      case 'k':
        min_features = atoi(optarg);
        break;

      case 's':
        seed = atoi(optarg);
        break;
    }
  }	

	if (data_file_name == NULL){
		std::cout << "The dataset name is required!" << std::endl;
		return 0;
	}
	
	// print options
	std::cout << "Parameters -- data:" << data_file_name << " min_instances:" << 
		min_instances << " min_features:" << min_features << " seed:" << seed << std::endl;



	// loading data


	dataset train_data(data_file_name);
	std::cout << "Loaded " << train_data.shape[0] << " instances on " << train_data.shape[1] << " variables, sparsity: " << train_data.sparsity << std::endl;

    random_generator.seed(seed);

       
    ensCnet<optionXCnet> eC(10);
	auto t1 = std::chrono::high_resolution_clock::now();
    //C.fit(train_data, inputParameters);
	//C.fitRand(train_data, min_instances, min_features, seed);
	//	cout << "Training ll: " << C.eval(train_data) << endl;
    eC.fit(train_data, inputParameters);
	auto t2 = std::chrono::high_resolution_clock::now();
	std::cout << "Elapsed time: "
			 << std::chrono::duration_cast<std::chrono::seconds>(t2-t1).count()
			 << " seconds, "
			 << std::chrono::duration_cast<std::chrono::milliseconds>(t2-t1).count()
			 << " milliseconds\n";	
    std::cout << mean(eC.eval(train_data)) << std::endl;
    
    dataset test_data("nltcs.test.data");
    std::cout << mean(eC.eval(test_data)) << std::endl;
}
